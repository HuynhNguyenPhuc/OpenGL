<!-- res/layout/activity_view.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/instanceCountInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter number of instances"
        android:inputType="number"
        tools:ignore="Autofill,HardcodedText,TextContrastCheck,VisualLintTextFieldSize" />

    <Button
        android:id="@+id/updateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Instances"
        tools:ignore="HardcodedText" />

    <FrameLayout
        android:id="@+id/glSurfaceContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>